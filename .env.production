# Production Environment Variables for Vercel Backend

# Database
DATABASE_URL="your-production-database-url-here"

# JWT
JWT_SECRET="your-super-secure-jwt-secret-here"
JWT_EXPIRE="7d"
JWT_COOKIE_EXPIRE=7

# CORS
CORS_ORIGIN="https://ahmedabulella.space,https://www.ahmedabulella.space"

# Node Environment
NODE_ENV=production

# File Upload
MAX_FILE_UPLOAD=2000000000
UPLOAD_PATH=./uploads

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# Security
BCRYPT_ROUNDS=12

# DRM
DRM_SECRET_KEY="your-drm-secret-key-here"
ENCRYPTION_KEY="your-32-character-encryption-key"

# Session
SESSION_SECRET="your-session-secret-here"
